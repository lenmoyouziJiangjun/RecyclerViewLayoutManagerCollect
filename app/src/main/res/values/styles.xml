<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ShopTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/shopAccent</item>
    </style>

    <style name="WeatherTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    
    <style name="GalleryTheme" parent="AppTheme">
        <item name="colorAccent">@color/galleryAccent</item>
    </style>

    <style name="ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="SportCardStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SportCardStyle.SportTile">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SportCardStyle.SportSplashTile">
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textSize">12sp</item>-->
    </style>

    <style name="SportCardStyle.SportSubtitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SportCardStyle.SportSplashSubtitle">
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textSize">10sp</item>-->
    </style>

    <style name="SportCardStyle.SportRound">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SportCardStyle.SportSplashRound">
        <item name="android:textStyle">italic</item>
        <!--<item name="android:textSize">10sp</item>-->
    </style>

    <style name="SportCardStyle.Time">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SportCardStyle.splashTime">
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textSize">12sp</item>-->
    </style>

    <style name="SportCardStyle.DayPart">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SportCardStyle.splashDayPart">
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textSize">12sp</item>-->
    </style>

</resources>
