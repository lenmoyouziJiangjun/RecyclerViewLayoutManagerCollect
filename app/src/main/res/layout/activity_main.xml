<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_test1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:onClick="showCarouse"
        android:text="carouselayoutmanager"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_test2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:onClick="showDiscrete"
        android:text="DiscreteLayoutManager"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/tv_test3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:onClick="showCardLayout"
        android:text="CardLayoutManager"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_test4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:onClick="showFanLayout"
        android:text="CardLayoutManager"
        android:textSize="20dp" />

</LinearLayout>